# Skyhook Operator Helm Values
# Generated by CNS Eidos
# Timestamp: {{ .Timestamp }}
# Bundler Version: {{ .Version }}
# Recipe Version: {{ .RecipeVersion }}

controllerManager:
  kubeRbacProxy:
    image:
      repository: {{ .OperatorRegistry.Value }}/kube-rbac-proxy
      tag: {{ .KubeRbacProxyVersion.Value }}
  manager:
    resources:
      limits:
        cpu: {{ .ManagerCPULimit.Value }}
        memory: {{ .ManagerMemoryLimit.Value }}
      requests:
        cpu: {{ .ManagerCPURequest.Value }}
        memory: {{ .ManagerMemoryRequest.Value }}
    env:
      agentImage: {{ .SkyhookAgentImage.Value }}
    image:
      repository: {{ .OperatorRegistry.Value }}/skyhook-operator
      tag: {{ .SkyhookOperatorVersion.Value }}
  selectors:
    dedicated: {{ .NodeSelector.Value }}
  tolerations:
  - key: {{ .TolerationKey.Value }}
    operator: Equal
    value: {{ .TolerationValue.Value }}
    effect: NoSchedule
  - key: {{ .TolerationKey.Value }}
    operator: Equal
    value: {{ .TolerationValue.Value }}
    effect: NoExecute
