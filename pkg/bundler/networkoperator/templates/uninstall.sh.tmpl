#!/bin/bash
# Network Operator Uninstallation Script
# Generated from Cloud Native Stack Recipe
# Timestamp: {{ .Timestamp }}
# Version: {{ .Version }}

set -e

echo "========================================="
echo "Network Operator Uninstallation"
echo "========================================="
echo ""

# Configuration
NAMESPACE="{{ .Namespace }}"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0;33[0m' # No Color

# Helper functions
log_info() {
    echo -e "${GREEN}[INFO]${NC} $1"
}

log_warn() {
    echo -e "${YELLOW}[WARN]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check prerequisites
log_info "Checking prerequisites..."

if ! command -v kubectl &> /dev/null; then
    log_error "kubectl not found. Please install kubectl first."
    exit 1
fi

if ! command -v helm &> /dev/null; then
    log_error "helm not found. Please install Helm 3 first."
    exit 1
fi

# Warning prompt
log_warn "This will remove Network Operator and all associated resources from your cluster."
read -p "Are you sure you want to continue? (yes/no): " -r
echo ""
if [[ ! $REPLY =~ ^[Yy][Ee][Ss]$ ]]; then
    log_info "Uninstallation cancelled."
    exit 0
fi

# Delete NicClusterPolicy
log_info "Deleting NicClusterPolicy..."
kubectl delete nicclusterpolicy --all -n ${NAMESPACE} --ignore-not-found=true

# Wait for resources to be cleaned up
log_info "Waiting for resources to be cleaned up..."
sleep 10

# Uninstall Network Operator using Helm
log_info "Uninstalling Network Operator..."
helm uninstall network-operator -n ${NAMESPACE} || true

# Delete namespace (optional, prompted)
read -p "Do you want to delete the namespace ${NAMESPACE}? (yes/no): " -r
echo ""
if [[ $REPLY =~ ^[Yy][Ee][Ss]$ ]]; then
    log_info "Deleting namespace ${NAMESPACE}..."
    kubectl delete namespace ${NAMESPACE} --ignore-not-found=true
else
    log_info "Namespace ${NAMESPACE} preserved."
fi

echo ""
echo "========================================="
log_info "Uninstallation Complete!"
echo "========================================="
echo ""
log_info "Network Operator has been removed from your cluster."
echo ""
