# Skyhook Operator Helm Values
# Generated by CNS Eidos
# Timestamp: {{ .Timestamp }}
# Bundler Version: {{ .Version }}
# Recipe Version: {{ .RecipeVersion }}

controllerManager:
  kubeRbacProxy:
    image:
      repository: {{ .OperatorRegistry }}/kube-rbac-proxy
      tag: {{ .KubeRbacProxyVersion }}
  manager:
    resources:
      limits:
        cpu: {{ .ManagerCPULimit }}
        memory: {{ .ManagerMemoryLimit }}
      requests:
        cpu: {{ .ManagerCPURequest }}
        memory: {{ .ManagerMemoryRequest }}
    env:
      agentImage: {{ .SkyhookAgentImage }}
    image:
      repository: {{ .OperatorRegistry }}/skyhook-operator
      tag: {{ .SkyhookOperatorVersion }}
  selectors:
    dedicated: {{ .NodeSelector }}
  tolerations:
  - key: {{ .TolerationKey }}
    operator: Equal
    value: {{ .TolerationValue }}
    effect: NoSchedule
  - key: {{ .TolerationKey }}
    operator: Equal
    value: {{ .TolerationValue }}
    effect: NoExecute
