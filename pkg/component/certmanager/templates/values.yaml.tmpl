# cert-manager Helm Values
# Generated from Cloud Native Stack Recipe
# Timestamp: {{ .Timestamp }}
# Bundler Version: {{ .Version }}
# Recipe Version: {{ .RecipeVersion }}

global:
  imagePullSecrets:
    - name: {{ .ImagePullSecret }}

image:
  repository: {{ .ControllerImage }}

resources:
  requests:
    memory: {{ .ControllerMemoryRequest }}
    cpu: {{ .ControllerCPURequest }}
  limits:
    memory: {{ .ControllerMemoryLimit }}
    cpu: {{ .ControllerCPULimit }}

installCRDs: {{ .InstallCRDs }}

prometheus:
  servicemonitor:
    enabled: {{ .EnablePrometheus }}

tolerations:
- key: {{ .TolerationKey }}
  value: {{ .TolerationValue }}

nodeSelector:
  {{ .NodeSelectorKey }}: {{ .NodeSelectorValue }}

webhook:
  image:
    repository: {{ .WebhookImage }}
  tolerations:
  - key: {{ .TolerationKey }}
    value: {{ .TolerationValue }}
  nodeSelector:
    {{ .NodeSelectorKey }}: {{ .NodeSelectorValue }}
  resources:
    requests:
      memory: {{ .WebhookMemoryRequest }}
      cpu: {{ .WebhookCPURequest }}
    limits:
      memory: {{ .WebhookMemoryLimit }}
      cpu: {{ .WebhookCPULimit }}

cainjector:
  image:
    repository: {{ .CAInjectorImage }}
  tolerations:
  - key: {{ .TolerationKey }}
    value: {{ .TolerationValue }}
  nodeSelector:
    {{ .NodeSelectorKey }}: {{ .NodeSelectorValue }}
  resources:
    requests:
      memory: {{ .CAInjectorMemoryRequest }}
      cpu: {{ .CAInjectorCPURequest }}
    limits:
      memory: {{ .CAInjectorMemoryLimit }}
      cpu: {{ .CAInjectorCPULimit }}

startupapicheck:
  tolerations:
  - key: {{ .TolerationKey }}
    value: {{ .TolerationValue }}
  nodeSelector:
    {{ .NodeSelectorKey }}: {{ .NodeSelectorValue }}
